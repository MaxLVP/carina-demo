<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite verbose="1" name="Carina Demo Tests - Re-store products tests" >
    <test name="Test cart">
        <classes>
            <class name="com.qaprosoft.carina.demo.ReStoreTest">
                <methods>
                    <include name="testCartLogout"/>
                    <include name="testAddProductsToCart()"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Product tests">
        <classes>
            <class name="com.qaprosoft.carina.demo.ReStoreTest">
                <methods>
                    <include name="testProductInfo()"/>
                    <include name="testFavoriteProducts"/>
                    <include name="testFavoriteProductWithLogin" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Authorization and pages">
        <classes>
            <class name="com.qaprosoft.carina.demo.ReStoreTest">
                <methods>
                    <include name="testAuthorization"/>
                    <include name="testPagesFromMenu"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>